@model IEnumerable<prueba.Models.Habitat>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Crear nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CodigoHabitat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreHabitat)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoHabitat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreHabitat)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.HabitatId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.HabitatId">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.HabitatId">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
