@model IEnumerable<prueba.Models.Habitat>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">

<h1>Habitats </h1>

<p>
    <a class="btn btn-success" asp-action="Create">Crear<i><span class="material-icons">add_location</span></i></a>
</p>
<div class="input-group">
<form method="get" asp-action="Index" class="d-flex">
    <input type="search" class="form-control"placeholder="buscar el nombre del habitat" value="@ViewData["GetClimadetails"]" name="habitatsearch" style="width:250px"/>
    <button type="submit" class="btn btn-primary">Buscar<i class="fas fa-search"></i></button>|
    <a asp-action="Index" class="btn btn-secondary">Todos los habitats<i class="fas fa-list"></i></a>
</form>
</div>
<br/>
<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th class="table-success">
                @Html.DisplayNameFor(model => model.CodigoHabitat)
            </th>
            <th class="table-success">
                @Html.DisplayNameFor(model => model.NombreHabitat)
            </th>
            <th class="table-success">
                Acciones
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="table-light">
                @Html.DisplayFor(modelItem => item.CodigoHabitat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreHabitat)
            </td>
            <td>
                <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.HabitatId">Editar<i><span class="material-icons">edit</span></i></a> |
                <a  class="btn btn-warning" asp-action="Details" asp-route-id="@item.HabitatId">Detalles<i><span class="material-icons">description</span></i></a> |
                <a  class="btn btn-danger" asp-action="Delete" asp-route-id="@item.HabitatId">Eliminar<i><span class="material-icons">delete_forever</span></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
