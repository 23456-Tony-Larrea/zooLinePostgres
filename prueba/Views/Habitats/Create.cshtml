@model prueba.Models.Habitat

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">

<h1>Crear</h1>

<h4>Habitat</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CodigoHabitat" class="control-label"></label>
                <input asp-for="CodigoHabitat" class="form-control" />
                <span asp-validation-for="CodigoHabitat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NombreHabitat" class="control-label"></label>
                <input asp-for="NombreHabitat" class="form-control" />
                <span asp-validation-for="NombreHabitat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">Crear<i><span class="material-icons">add_location</span></i></button>
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-danger"asp-action="Index">Regresar a la lista <i><span class="material-icons">exit_to_app</span></i></a>
</div>

