
@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

<h1 class="bg-info text-white">Todos los Roles</h1>
<a asp-action="Create" class="btn btn-secondary">Crear Rol</a>

<table class="table table-sm table-bordered table-bordered">
    <tr><th>ID</th><th>Nombre</th><th>Usuario</th><th>Actualizar</th><th>Eliminar</th></tr>
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Id</td>
            <td>@role.Name</td>
            <td i-role="@role.Id"></td>
            <td><a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@role.Id">Actualizar</a></td>
            <td>
                <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Eliminar
                    </button>
                </form>
            </td>
        </tr>
    }
    </table>
