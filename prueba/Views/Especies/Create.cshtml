@model ZooLine.Models.HabitatModifyModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons" />

<h1>Crear</h1>

<h4>Especies</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombreEspecie" class="control-label"></label>
                <input asp-for="NombreEspecie" class="form-control" />
                <span asp-validation-for="NombreEspecie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HabitatId" class="control-label"></label>
                <select asp-for="HabitatId" class ="form-control" asp-items="Model.Habitas">
                   
                </select>
            </div>
            <div class="form-group">
                <button type="submit" value="Crear" class="btn btn-success" >Crear<i class="fas fa-paw"></i></button>
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-danger" asp-action="Index">Regresar a la lista<i><span class="material-icons">exit_to_app</span></i> </a>
</div>

