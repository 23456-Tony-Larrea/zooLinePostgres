@model IEnumerable<prueba.Models.Especie>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<meta name='viewport' content='width=device-width, initial-scale=1'>
<script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">


<h1>Especies</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Crear<i class="fas fa-paw"></i> </a>
</p>
<div class="input-group">
<form method="get" asp-action="Index" class="d-flex">
    <input type="search" class="form-control"placeholder="buscar el nombre de la especie" value="@ViewData["GetEspeciedetails"]" name="especiesearch" style="width:240px"/>
    <button type="submit" class="btn btn-primary">Buscar<i class="fas fa-search"></i></button>|
    <a asp-action="Index" class="btn btn-secondary">Todos las especies<i class="fas fa-list"></i></a>
</form>
</div>
<br/>
<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th class="table-success">
                @Html.DisplayNameFor(model => model.NombreEspecie)
            </th>
            <th class="table-success">
                @Html.DisplayNameFor(model => model.Habitat)
            </th>
            <th class="table-success">
                Acciones
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreEspecie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Habitat.NombreHabitat)
            </td>
            <td>
                <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.EspecieId">Editar<i><span class="material-icons">edit</span></i></a> |
                <a class="btn btn-warning" asp-action="Details" asp-route-id="@item.EspecieId">Detalles <i><span class="material-icons">description</span></i></a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.EspecieId">Eliminar<i><span class="material-icons"></span></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
