@if (Model.Data.Count > 0)
{
<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th class="table-success">
                @Html.DisplayNameFor(model => model.Data.FirstOrDefault().Nombre)
            </th>
            <th class="table-success">
                @Html.DisplayNameFor(model => model.Data.FirstOrDefault().NombreCientifico)
            </th>
            <th class="table-success">
                @Html.DisplayNameFor(model => model.Data.FirstOrDefault().año_nacimiento)
            </th>
            <th class="table-success">
                @Html.DisplayNameFor(model => model.Data.FirstOrDefault().año_muerte)
            </th>
            <th class="table-success">
                @Html.DisplayNameFor(model => model.Data.FirstOrDefault().estatura)
            </th>
            <th class="table-success">
                @Html.DisplayNameFor(model => model.Data.FirstOrDefault().ancho)
            </th>
            <th class="table-success">
                @Html.DisplayNameFor(model => model.Data.FirstOrDefault().Titulo)
            </th>
            <th class="table-success">
                @Html.DisplayNameFor(model => model.Data.FirstOrDefault().NombreImagen)
            </th>
            <th class="table-success">
                @Html.DisplayNameFor(model => model.Data.FirstOrDefault().descripcion)
            </th>
            <th class="table-success">
                @Html.DisplayNameFor(model => model.Data.FirstOrDefault().Especie)
            </th>
            <th class="table-success">
                Acciones
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Data)
{
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreCientifico)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.año_nacimiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.año_muerte)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.estatura)cm;
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ancho)kg;
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreImagen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Especie)
            </td>
            <td>
                <a class="btn btn-info"  asp-action="Edit" asp-route-id="@item.AnimalId">Editar<i><span class="material-icons">edit</span></i></a> |
                <a class="btn btn-warning" asp-action="Details" asp-route-id="@item.AnimalId">Detalles<i><span class="material-icons">description</span></i></a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.AnimalId">Eliminar<i><span class="material-icons">delete_forever</span></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
}else { 

    <div class="alert-danger"> No se encontro ningun dato </div>

}