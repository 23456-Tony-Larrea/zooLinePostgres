@model IEnumerable<prueba.Models.Animales>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreCientifico)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.año_nacimiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.año_muerte)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.estatura)
